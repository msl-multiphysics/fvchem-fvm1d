# set simulation
simu transient

# initialize mesh
mesh bounds 0.0 1.0 20

# create domains
dom1d dom = 0
dom0d dom_l = dom 0
dom0d dom_r = dom 1

# create variables
var1d c = dom 1.0 "examples/output_transient_bndconc/c" 20

# create scalars
scl1d d = dom 0.1
scl1d r = dom 2.0
scl0d c_l = dom_l 1.0
scl0d c_r = dom_r 0.5

# set physics
physics diff

# set interior and boundary conditions
int dom c d r
bnd conc dom_l c_l
bnd conc dom_r c_r

# solver
solve 0.01 101 1000 1e-6 1.0
