# set simulation
simu steady

# initialize mesh
mesh bounds 0.0 1.0 50

# create domains
dom1d dom = 0
dom0d dom_l = dom 0
dom0d dom_r = dom 1

# create variables
var1d c = dom 1.0 "examples/output_steady_bndconc/c"

# create scalars
scl1d d = dom 0.1
scl1d u = dom 2.0
scl1d r = dom 0.0
scl0d c_l = dom_l 1.0
scl0d c_r = dom_r 0.5

# set physics
physics diffadv linear

# set interior and boundary conditions
int dom c d u r
bnd conc dom_l c_l
bnd conc dom_r c_r

# solver
solve 1000 1e-6 1.0
